@using BabyTravel.UI.Client.Components.Calculate
@using BabyTravel.Utilities
﻿@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <RadzenRow Style="margin-right:auto">
            <CalculatorSplitButton />
        </RadzenRow>

        <RadzenRow>
            <RadzenText Text="@context.User.GetUserEmail()" />
            <RadzenButton Icon="logout" ButtonStyle="Radzen.ButtonStyle.Primary" Variant="Radzen.Variant.Outlined" Click="Logout" />

            @if (_loggingOut)
            {
                <RedirectToLogin />
            }

        </RadzenRow>
    </Authorized>
</AuthorizeView>