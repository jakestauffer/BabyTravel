@using BabyTravel.Api.Client;
@using BabyTravel.UI.Client.Extensions;
@using BabyTravel.UI.Client.Models.Calculate.Forms;
@using Microsoft.AspNetCore.Components.Forms;
@using Radzen;
@using BabyTravel.UI.Client.Models.Calculate;

<Calculator TRequestForm="CalculateSleepForm"
                   TResponse="CalculateSleepResponse"
                   Calculate="CalculateSleepAsync">
    <DisplayResponseConent>
        <RadzenCard>
             <RadzenRow RowGap="0">
                <RadzenColumn SizeSM="4">
                    <RadzenText TextStyle="TextStyle.Overline">Total sleep</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.TotalSleepInHours.ToStringUpTo() hours</b></RadzenText>
                </RadzenColumn>
                <RadzenColumn>
                    <RadzenText TextStyle="TextStyle.Overline">Naps per day</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.NapsPerDay.ToStringUpTo()</b></RadzenText>

                    <RadzenText TextStyle="TextStyle.Overline">Nap length</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.NapLengthInHours.ToStringBetween() hours</b></RadzenText>
                </RadzenColumn>
                <RadzenColumn>
                    <RadzenText TextStyle="TextStyle.Overline">Wake winodws</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.WakeWindowInHours.ToStringBetween() hours</b></RadzenText>
                </RadzenColumn>
            </RadzenRow>
        </RadzenCard>

    </DisplayResponseConent>
</Calculator>