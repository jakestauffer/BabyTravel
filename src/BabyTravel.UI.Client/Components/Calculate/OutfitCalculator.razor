@using BabyTravel.Api.Client;
@using BabyTravel.UI.Client.Models.Calculate.Forms;
@using Microsoft.AspNetCore.Components.Forms;
@using Radzen;
@using BabyTravel.UI.Client.Models.Calculate;

<Calculator TRequestForm="CalculateOutfitForm"
                   TResponse="CalculateOutfitResponse"
                   Calculate="CalculateOutfitsAsync">
    <AdditionalTravelInputs>
        <RadzenLabel Text="Washing frequency (in days)" Component="WashingFrequency" />
        <RadzenNumeric @bind-Value="@context.WashingFrequencyInDays" Name="WashingFrequency" />
    </AdditionalTravelInputs>
    <DisplayResponseConent>
        <RadzenCard>
            <RadzenRow RowGap="0">
                <RadzenColumn SizeSM="4">
                    <RadzenText TextStyle="TextStyle.Overline">Outfits per day</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.OutfitsPerDay</b></RadzenText>

                    <RadzenText TextStyle="TextStyle.Overline">Total outfits</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.TotalOutfits</b></RadzenText>
                </RadzenColumn>

                <RadzenColumn SizeSM="4">
                    <RadzenText TextStyle="TextStyle.Overline">Total hats</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.TotalHats</b></RadzenText>

                    <RadzenText TextStyle="TextStyle.Overline">Total tops</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.TotalTops</b></RadzenText>

                    <RadzenText TextStyle="TextStyle.Overline">Total bottoms</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.TotalBottoms</b></RadzenText>

                    <RadzenText TextStyle="TextStyle.Overline">Total socks</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.TotalSocks</b></RadzenText>

                    <RadzenText TextStyle="TextStyle.Overline">Total pajamas</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.TotalPajamas</b></RadzenText>

                    <RadzenText TextStyle="TextStyle.Overline">Total sleep sacks</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1"><b>@context.TotalSleepsacks</b></RadzenText>
                </RadzenColumn>
            </RadzenRow>
        </RadzenCard>
    </DisplayResponseConent>
</Calculator>